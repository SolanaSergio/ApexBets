# ApexBets Package Manager Configuration
# This project uses pnpm as the package manager

# Use pnpm for all package operations
package-manager=pnpm

# Disable npm warnings about using pnpm
engine-strict=true

# Use strict peer dependencies
strict-peer-dependencies=false

# Use pnpm's node_modules structure - use 'hoisted' for Windows compatibility
node-linker=hoisted

# Enable pnpm's strict mode for better dependency management
strict-peer-dependencies=false

# Windows-specific settings
symlink=false
