# PNPM Configuration for Vercel Deployment
# Ensure consistent package manager behavior

# Use pnpm version 9.x
package-manager-strict=true

# Enable frozen lockfile for CI/CD
frozen-lockfile=true

# Auto install peer dependencies
auto-install-peers=true

# Use exact versions for better reproducibility
save-exact=false

# Enable strict peer dependencies
strict-peer-dependencies=false

# Use the same registry as package.json
registry=https://registry.npmjs.org/

# Enable hoisting for better performance
hoist=true

# Disable shamefully-hoist to avoid conflicts
shamefully-hoist=false